{
  "name": "identity-dapplet-overlay",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "ethers": "^4.0.47",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "typescript": "^3.8.3"
  },
  "homepage": "./",
  "scripts": {
    "start": "cross-env BROWSER=none HTTPS=true react-scripts start",
    "build": "react-scripts build",
    "swarm:setup": "erebos website:setup --name=\"identity.dapplet-base.eth\" --http-gateway=https://swarm-gateways.net",
    "swarm:upload": "cross-env SWARM_KEY=$(grep SWARM_KEY .env | cut -d '=' -f2) erebos website:publish --hash=$(grep SWARM_ADDRESS .env | cut -d '=' -f2) --key-env=SWARM_KEY ./build --http-gateway=https://swarm-gateways.net",
    "deploy": "npm run build && npm run swarm:upload"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@erebos/cli": "^0.13.1",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "cross-env": "^7.0.2"
  }
}
